<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SignupController"
            prefWidth="400" prefHeight="440"
            style="-fx-background-color: #000066;">
    <children>

        <!-- Language Switch -->
        <HBox layoutX="220" layoutY="20" spacing="5" alignment="CENTER_LEFT">
            <children>
                <Label fx:id="languageLabel" textFill="white" />
                <ComboBox fx:id="languageComboBox" prefWidth="130" />
            </children>
        </HBox>

        <!-- Title -->
        <Label fx:id="titleLabel" layoutX="50" layoutY="50"
               textFill="white"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Form -->
        <VBox layoutX="50" layoutY="100" spacing="10" prefWidth="300">
            <children>
                <Label fx:id="usernameLabel" textFill="white"/>
                <TextField fx:id="usernameField" prefWidth="300"/>

                <Label fx:id="passwordLabel" textFill="white"/>
                <PasswordField fx:id="passwordField" prefWidth="300"/>

                <Label fx:id="confirmPasswordLabel" textFill="white"/>
                <PasswordField fx:id="confirmPasswordField" prefWidth="300"/>

                <!-- Sign Up Button -->
                <Button fx:id="signupButton" onAction="#handleSignup"
                        text="%signup.button"
                        style="-fx-background-color: #00FF00; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="300"/>

                <!-- Back to Login Button -->
                <Button fx:id="backToLoginButton" onAction="#backToLogin"
                        text="%login"
                        style="-fx-background-color: white; -fx-text-fill: #000066; -fx-font-weight: bold;"
                        prefWidth="300"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
