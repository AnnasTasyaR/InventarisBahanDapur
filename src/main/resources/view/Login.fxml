<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="400"
            style="-fx-background-color: #ffc0cb;"> <!-- merah muda -->

    <children>
        <!-- Language Selector -->
        <HBox layoutX="200.0" layoutY="20.0" alignment="CENTER_RIGHT" spacing="5">
            <children>
                <Label fx:id="languageLabel" text="%language" textFill="white" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="languageComboBox" prefWidth="150"/>
            </children>
        </HBox>

        <!-- Login Form -->
        <VBox layoutX="50.0" layoutY="80.0" spacing="15">
            <children>
                <Label fx:id="titleLabel" text="%login.title" textFill="white"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <Label fx:id="usernameLabel" text="%username" textFill="white" style="-fx-font-weight: bold;" />
                <TextField fx:id="usernameField" prefWidth="300"/>

                <Label fx:id="passwordLabel" text="%password" textFill="white" style="-fx-font-weight: bold;" />
                <PasswordField fx:id="passwordField" prefWidth="300"/>
            </children>
        </VBox>

        <!-- Tombol Login & Signup -->
        <VBox layoutX="80.0" layoutY="300.0" spacing="10" prefWidth="240" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="loginButton" text="%login" onAction="#handleLogin"
                        prefWidth="240"
                        style="-fx-background-color: #800000; -fx-text-fill: white; -fx-font-weight: bold;" />

                <Button fx:id="signupButton" text="%signup" onAction="#goToSignup"
                        prefWidth="240"
                        style="-fx-background-color: #800000; -fx-text-fill: white; -fx-font-weight: bold;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
